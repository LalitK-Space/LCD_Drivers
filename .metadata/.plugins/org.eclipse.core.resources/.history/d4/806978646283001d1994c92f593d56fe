/*
 * 									lcd_drivers.h
 *
 * This file contains all the LCD-related APIs supported by the driver.
 *
 */

#ifndef LCD_DRIVERS_INC_LCD_DRIVERS_H_
#define LCD_DRIVERS_INC_LCD_DRIVERS_H_

#include "stm32f407xx.h"
#include "stm32f407xx_gpio_drivers.h"

/* -- Application Configurable Items  -- */
#define LCD_GPIO_PORT	GPIOD		// LCD is connected to GPIO port D
#define LCD_GPIO_RS		GPIO_Pin_0	// LCD RS is connected to Pin 0
#define LCD_GPIO_RW		GPIO_Pin_1	// LCD RW is connected to Pin 1
#define LCD_GPIO_E		GPIO_Pin_2	// LCD Enable is connected to Pin 2
#define LCD_GPIO_D4		GPIO_Pin_3	// LCD D4 is connected to Pin 3
#define LCD_GPIO_D5		GPIO_Pin_4	// LCD D5 is connected to Pin 4
#define LCD_GPIO_D6		GPIO_Pin_5	// LCD D6 is connected to Pin 5
#define LCD_GPIO_D7		GPIO_Pin_6	// LCD D7 is connected to Pin 6

/* -- (Some) LCD Commands -- */
#define LCD_CMD_4DL_2N_5X8F 		0x28	// Data Length = 4, Lines = 2, Font = 5x8 dots
#define LCD_CMD_DISPLAY_CURSOR_ON   0x0E	// Display and Cursor ON
#define LCD_CMD_INCREMENT_RAM_ADDR  0x06	// Increment RAM ADDRESS
#define LCD_CMD_DISPLAY_CLEAR		0x01	// CLear Display
#define LCD_CMD_DISPLAY_RETURN_HOME 0x02	// Return Home


/* -- APIs Supported by LCD driver -- */
void LCD_Init(void);			// To initialize LCD
void LCD_SendCommands(uint8_t command);	// To send Commands
void LCD_SendData(uint8_t data);	// To send data


#endif /* LCD_DRIVERS_INC_LCD_DRIVERS_H_ */
